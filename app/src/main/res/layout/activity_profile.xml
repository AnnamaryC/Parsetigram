<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anitac.parsetigram.Activities.ProfileActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/black"
        android:background="@drawable/purple_violet"
        android:layout_marginBottom="10dp">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/paProfilePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@android:color/black"
        android:layout_below="@id/toolbar"
         />

    <TextView
        android:id="@+id/paHandle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/paProfilePic"
        android:layout_toEndOf="@+id/paProfilePic"
        android:text="TextView" />

    <TextView
        android:id="@+id/paBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/paHandle"
        android:text="TextView" />
</RelativeLayout>
