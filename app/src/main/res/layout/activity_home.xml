<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anitac.parsetigram.HomeActivity">

    <EditText
        android:id="@+id/ahDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Description..."
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/ahCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ahDescription"
        android:layout_alignStart="@id/ahDescription"
        android:layout_below="@id/ahDescription"
        android:text="Create" />

    <Button
        android:id="@+id/ahRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ahCreate"
        android:layout_alignStart="@id/ahCreate"
        android:layout_below="@id/ahCreate"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Refresh"
        android:text="Refresh" />

</RelativeLayout>
