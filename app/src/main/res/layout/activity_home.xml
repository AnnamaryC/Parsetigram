<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/black"
        android:background="?attr/colorPrimary">

    </android.support.v7.widget.Toolbar>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anitac.parsetigram.HomeActivity">



    <ImageView
        android:id="@+id/ahPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@android:color/background_dark"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/ahDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@id/ahPhoto"
        android:layout_alignStart="@id/ahPhoto"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Description..."
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/ahCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ahDescription"
        android:layout_alignStart="@id/ahDescription"
        android:layout_below="@id/ahDescription"
        android:text="Create" />

    <Button
        android:id="@+id/ahRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ahCreate"
        android:layout_alignStart="@id/ahCreate"
        android:layout_below="@id/ahCreate"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Refresh"
        android:text="Refresh" />

</RelativeLayout>
</LinearLayout>