<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anitac.parsetigram.Activities.PostDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/black"
        android:background="?attr/colorPrimary">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/pdaImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:color/black"
        android:layout_margin="10dp"
        android:layout_below="@id/toolbar"/>

    <TextView
        android:id="@+id/pdaUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pdaImage"
        android:text="TextView"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pdaDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pdaUsername"
        android:text="TextView"
        android:textSize="20sp"/>
</RelativeLayout>
