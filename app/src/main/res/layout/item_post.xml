<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="@drawable/stronger_opacity"
    >


    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_profile_pic"
        android:layout_marginTop="5dp"
        android:clickable="true"
        />

    <ImageView

        android:id="@+id/postImage"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@+id/userHandle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/userHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profilePic"
        android:layout_toEndOf="@+id/profilePic"
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/actualDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/postImage"
        android:layout_alignStart="@+id/postImage"
        android:layout_below="@+id/postImage"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>



</RelativeLayout>